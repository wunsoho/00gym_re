<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/home_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/skyblue"
        android:fontFamily="@font/tenten"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:paddingTop="25dp"
        android:paddingStart="190dp"
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="홈"
        android:fontFamily="@font/tenten"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_background_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_top" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/tenten"
        android:layout_marginTop="400dp"
        android:paddingStart="120dp"
        android:paddingTop="30dp"
        android:text="00풋살장"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@id/home_top"
        app:layout_constraintTop_toBottomOf="@id/home_top" />

    <Button
        android:id="@+id/my_info"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/tenten"
        android:text="내정보"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_background_iv" />

    <Button
        android:id="@+id/reserve_date"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/tenten"
        android:text="예약하기"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_info" />

    <Button
        android:id="@+id/reserve_inquiry"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/tenten"
        android:text="예약조회"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reserve_date" />



</androidx.constraintlayout.widget.ConstraintLayout>